<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="br.com.denis.meuapp"> <!-- Substitua pelo nome correto do seu pacote -->

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MeuApp"
        tools:targetApi="31">

        <!-- Declaração da MainActivity -->
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Declaração da CalculadoraIMCActivity -->
        <activity android:name=".CalculadoraIMCActivity" android:exported="false"/>

        <!-- Declaração da CalculadoraCombustivelActivity -->
        <activity android:name=".CalculadoraCombustivelActivity" android:exported="false"/>

        <!-- Declaração da ApresentacaoActivity -->
        <activity android:name=".ApresentacaoActivity" android:exported="false"/>

    </application>

</manifest>
